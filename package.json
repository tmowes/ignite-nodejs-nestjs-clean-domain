    "@types/supertest": "^2.0.12",
    "@vitest/coverage-v8": "^0.34.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "prisma": "^5.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
